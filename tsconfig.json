{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".eslintrc.js", "*.ts"],
  "exclude": ["node_modules", "dist"]
}